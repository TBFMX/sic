<% case request.fullpath
	when "/"
		nav_izquierda = "borrar" 
		nav_derecha = "movil_barra_der"
		pagina_izquierda = "" 
		pagina_derecha = "/servicios"
	when "/servicios"
		nav_izquierda = "movil_barra_izq" 
		nav_derecha = "movil_barra_der"
		pagina_izquierda = "/" 
		pagina_derecha = "/casos"
	when "/casos"
		nav_izquierda = "movil_barra_izq" 
		nav_derecha = "movil_barra_der"
		pagina_izquierda = "/servicios" 
		pagina_derecha = "/psicoterapia"	
	when "/psicoterapia"
		nav_izquierda = "movil_barra_izq" 
		nav_derecha = "movil_barra_der"
		pagina_izquierda = "/casos" 
		pagina_derecha = "/resolucion"	
	when "/resolucion"
		nav_izquierda = "movil_barra_izq" 
		nav_derecha = "movil_barra_der"
		pagina_izquierda = "/psicoterapia" 
		pagina_derecha = "/evaluacion_personal"	
	when "/evaluacion_personal"
		nav_izquierda = "movil_barra_izq" 
		nav_derecha = "movil_barra_der"
		pagina_izquierda = "/resolucion" 
		pagina_derecha = "/psicodiagnosticos"	
	when "/psicodiagnosticos"
		nav_izquierda = "movil_barra_izq" 
		nav_derecha = "movil_barra_der"
		pagina_izquierda = "/evaluacion_personal" 
		pagina_derecha = "/nosotros"
	when "/nosotros"
		nav_izquierda = "movil_barra_izq" 
		nav_derecha = "movil_barra_der"
		pagina_izquierda = "/psicodiagnosticos" 
		pagina_derecha = "/contacto"											
	when "/contacto"
		nav_izquierda = "movil_barra_izq" 
		nav_derecha = "borrar"
		pagina_izquierda = "/nosotros" 
		pagina_derecha = ""			
end %>

<%= link_to image_tag("/images/flecha.png", id: nav_izquierda ), pagina_izquierda %>
<%= link_to image_tag("/images/flecha.png", id: nav_derecha ), pagina_derecha %>